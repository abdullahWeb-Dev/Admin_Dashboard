{
  "version": 2,
  "builds": [
    { "src": "*.js", "use": "@vercel/node" },
    { "src": "routes/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/client/(.*)", "dest": "routes/client.js" },
    { "src": "/general/(.*)", "dest": "routes/general.js" },
    { "src": "/management/(.*)", "dest": "routes/management.js" },
    { "src": "/sales/(.*)", "dest": "routes/sales.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}